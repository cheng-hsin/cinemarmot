generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Example {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model movies {
  movie_id          BigInt      @id @default(autoincrement())
  movie_title       String?     @db.VarChar(255)
  movie_release     DateTime?   @db.Date
  movie_length      String?     @db.VarChar(255)
  movie_overview    String?     @db.VarChar(255)
  movie_language    String?     @db.VarChar(255)
  movie_poster_path String?     @db.VarChar(255)
  movie_leading     String?     @db.VarChar(255)
  movie_director    String?     @db.VarChar(255)
  showtimes         showtimes[]
}

model seats {
  seat_id     Int      @id @default(autoincrement())
  hall_code   String?  @db.VarChar(255)
  seat_row    String?  @db.VarChar(255)
  seat_column Int?
  available   Boolean?
  hall_id     BigInt?
  orders      orders[]
  halls       halls?   @relation(fields: [hall_id], references: [hall_id], onDelete: NoAction, onUpdate: NoAction)

  @@index([hall_id], map: "fki_seats_hall")
}

model showtimes {
  showtime_id   BigInt    @id @default(autoincrement())
  movie_id      BigInt
  showtime_date DateTime? @db.Date
  showtime_time DateTime? @db.Time(6)
  hall_code     String?   @db.VarChar(255)
  ticket_price  BigInt?
  hall_id       BigInt?
  orders        orders[]
  halls         halls?    @relation(fields: [hall_id], references: [hall_id], onDelete: NoAction, onUpdate: NoAction)
  movies        movies    @relation(fields: [movie_id], references: [movie_id], onDelete: NoAction, onUpdate: NoAction)

  @@index([movie_id], map: "fki_showtimes_movie")
  @@index([hall_id], map: "fki_showtimes_hall")
}

model orders {
  order_id    BigInt    @id @default(autoincrement())
  showtime_id BigInt
  seat_id     Int
  user_id     String?   @db.VarChar(255)
  seats       seats     @relation(fields: [seat_id], references: [seat_id], onDelete: NoAction, onUpdate: NoAction)
  showtimes   showtimes @relation(fields: [showtime_id], references: [showtime_id], onDelete: NoAction, onUpdate: NoAction)

  @@index([showtime_id], map: "fki_orders_showtime")
  @@index([seat_id], map: "fki_orders_seat")
}

model halls {
  hall_id     BigInt      @id @default(autoincrement())
  hall_code   String      @db.VarChar(255)
  halls       halls       @relation("hallsTohalls", fields: [hall_id], references: [hall_id], onDelete: NoAction, onUpdate: NoAction)
  other_halls halls?      @relation("hallsTohalls")
  seats       seats[]
  showtimes   showtimes[]
}
